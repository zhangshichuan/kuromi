{
	"name": "kuromi",
	"version": "0.0.0",
	"scripts": {
		"dev": "vite",
		"build": "run-p type-check build-only",
		"preview": "vite preview --port 4173",
		"build-only": "vite build",
		"type-check": "vue-tsc --noEmit",
		"prepare": "husky install",
		"lint": "cross-env npm run lint:eslint && npm run lint:stylelint",
		"lint:eslint": "cross-env eslint -c .eslintrc.js --ext .ts,.tsx,.js src",
		"lint:stylelint": "cross-env stylelint --config .stylelintrc.js src/**/*.{less,css}",
		"changelog": "cross-env conventional-changelog -p angular -i CHANGELOG.md -s"
	},
	"lint-staged": {
		"*.{ts,vue,js}": [
			"eslint --config .eslintrc.js"
		],
		"*.{css,less,scss}": [
			"stylelint --config .stylelintrc.js"
		],
		"*.{ts,vue,js,json,html,yml,css,less,md}": [
			"prettier --write"
		]
	},
	"dependencies": {
		"axios": "^0.27.2",
		"blueimp-md5": "^2.19.0",
		"dayjs": "^1.11.4",
		"lodash": "^4.17.21",
		"normalize.css": "^8.0.1",
		"pinia": "^2.0.17",
		"vue": "^3.2.37",
		"vue-router": "^4.1.3"
	},
	"devDependencies": {
		"@commitlint/cli": "^17.0.3",
		"@commitlint/config-conventional": "^17.0.3",
		"@types/node": "^16.11.47",
		"@typescript-eslint/eslint-plugin": "^5.33.0",
		"@typescript-eslint/parser": "^5.33.0",
		"@vitejs/plugin-vue": "^3.0.1",
		"@vitejs/plugin-vue-jsx": "^2.0.0",
		"@vue/tsconfig": "^0.1.3",
		"eslint": "^8.0.1",
		"eslint-config-prettier": "^8.5.0",
		"eslint-config-standard": "^17.0.0",
		"eslint-plugin-import": "^2.25.2",
		"eslint-plugin-n": "^15.0.0",
		"eslint-plugin-promise": "^6.0.0",
		"eslint-plugin-vue": "^9.3.0",
		"husky": "^8.0.1",
		"less": "^4.1.3",
		"lint-staged": "^13.0.3",
		"naive-ui": "^2.32.1",
		"npm-run-all": "^4.1.5",
		"prettier": "^2.7.1",
		"stylelint": "^14.10.0",
		"stylelint-config-prettier": "^9.0.3",
		"stylelint-config-rational-order": "^0.1.2",
		"stylelint-config-standard": "^27.0.0",
		"stylelint-declaration-block-no-ignored-properties": "^2.5.0",
		"stylelint-order": "^5.0.0",
		"typescript": "~4.7.4",
		"vfonts": "^0.0.3",
		"vite": "^3.0.4",
		"vue-tsc": "^0.39.5"
	}
}
